<link rel="stylesheet" href="jquery-ui-1.12.1/jquery-ui.min.css">
<style type="text/css">
	*{
		margin: 0px;
		padding: 0px;
	}
	
	body {
		font: 62.5%;
	}
	
	.item{
		margin: 3px;
		padding: 5px;
	}
	
	.item > img{
		width: 50px;
		height: 50px;
	}
	
	#wrap{
		overflow: hidden;
	}
	
	#wrap > div {
		float: left;
	}
	
	#dock{
		position: fixed;
		min-height: 120px;
		width: 100%;
		bottom: 0px;
		z-index: 1;
	}
	
	#dock > div{
		float: right;
	}
</style>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="jquery-ui-1.12.1/jquery-ui.min.js"></script>
<script type="text/javascript">
$(function(){
	$("#addCart").click(function(){
		var cartList = $("#dock > .item");
		$.each(cartList, function(idx, item){
			var gno = $(item).attr("gno");
			var g = {gno:gno};
			$.ajax("insertCart",{data:g, success:function(){
				
			}});
		});
	});
	
	
	$.getJSON("goodsList",function(arr){
		$.each(arr, function(idx, g){			
			var item  = $("<div class='ui-widget-content ui-corner-all item'></div>").attr("gno",g.no);
			var img = $("<img/>").attr("src", "img/"+g.fname);
			var name = $("<p></p>").html(g.item);
			var price = $("<p></p>").html(g.price);
			$(item).append(img,name,price);
			$("#wrap").append(item);
		});
		
		$("#wrap > div").draggable({
			helper:"clone",
			zIndex:100,
			scroll:false
		});
		
		$("#dock").droppable({
			accept:"#wrap > div",
			drop:function(event, ui){
				$(ui.draggable).fadeOut(function(){
					 $(this).appendTo("#dock").fadeIn();
				});
			}
		});
		
		$("body").droppable({
			accept:"#dock > div",
			drop:function(event, ui){
				$(ui.draggable).fadeOut(function(){
					 $(this).appendTo("#wrap").fadeIn();
				});
			}
		});
	});
	
})
</script>
</head>
<body>
	<div id="wrap"></div>
	<button id="addCart">´ã±â</button>
	<div id="dock" class="ui-state-error"></div>
