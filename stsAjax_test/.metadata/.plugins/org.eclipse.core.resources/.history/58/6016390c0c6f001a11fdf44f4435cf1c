<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
<script type="text/javascript">
   $(function(){
	   var arr;
    	$.getJSON("/goodsList",function(data){
    		arr = data;
    		$.each(arr,function(idx, g){
    			var li = $("<li></li>");
    			var a = $("<a></a>").attr("href","#detailPage").attr("idx",idx);
    			
    			$(a).click(function(){
    				var idx = $(this).attr("idx");
    				var sg = arr[idx];
    				$("#img").attr("src","/img/"+sg.fname);
    				
    				$("#no").html(sg.no)
    				$("#item").html(sg.item)
    				$("#qty").html(sg.qty)
    				$("#price").html(sg.price)
    				$("#detail").html(sg.detail)
    			})
    			
    			var table =$("<table></table>");
    			var tr = $("<tr></tr>");
    			var td1 = $("<td style='padding-right:5px'></td>");
    			var td2 = $("<td style='padding-left:5px'></td>").html(g.item);
    			
    			var img = $("<img/>").attr({"src":"/img/"+g.fname, "width":30, "height":40});
    			$(td1).append(img);
    			
    			$(tr).append(td1,td2);
    			$(table).append(tr);
    			$(a).append(table);
    			$(li).append(a);
    			$("#list").append(li);
    		})
    	})
   });
   
</script>
</head>
